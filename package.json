{
  "name": "auto-continue",
  "displayName": "Auto Continue",
  "description": "Automatically continue chat dialog",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:autoContinueView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoContinue.start",
        "title": "Start Auto Continue",
        "icon": "$(play)"
      },
      {
        "command": "autoContinue.stop",
        "title": "Stop Auto Continue",
        "icon": "$(stop)"
      },
      {
        "command": "autoContinue.toggle",
        "title": "Toggle Auto Continue",
        "icon": "$(play-circle)"
      }
    ],
    "views": {
      "autoContinueContainer": [
        {
          "id": "autoContinueView",
          "name": "Control Panel",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autoContinueContainer",
          "title": "Auto Continue",
          "icon": "$(robot)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "autoContinue.toggle",
          "when": "view == autoContinueView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
