{
  "name": "go-auto-continue",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.3",
  "publisher": "dealenx",
  "icon": "resources/screen.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/dealenx/go-auto-continue.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/dealenx/go-auto-continue#readme",
  "bugs": {
    "url": "https://github.com/dealenx/go-auto-continue/issues"
  },
  "keywords": [
    "chat",
    "ai",
    "automation",
    "auto-continue",
    "continue"
  ],
  "activationEvents": [
    "onView:goAutoContinueView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "goAutoContinue.start",
        "title": "%command.start.title%",
        "icon": "$(robot)"
      },
      {
        "command": "goAutoContinue.stop",
        "title": "%command.stop.title%",
        "icon": "$(stop-circle)"
      },
      {
        "command": "goAutoContinue.toggle",
        "title": "%command.toggle.title%",
        "icon": "$(play-circle)"
      },
      {
        "command": "goAutoContinue.openSettings",
        "title": "%command.openSettings.title%",
        "icon": "$(gear)"
      }
    ],
    "views": {
      "goAutoContinueContainer": [
        {
          "id": "goAutoContinueView",
          "name": "%view.name%",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "goAutoContinueContainer",
          "title": "%view.container.title%",
          "icon": "./resources/go-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "goAutoContinue.checkInterval": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 30,
          "description": "Интервал проверки изменений в чате (в секундах)"
        },
        "goAutoContinue.pauseThreshold": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 300,
          "description": "Время ожидания без изменений перед отправкой сообщения (в секундах)"
        },
        "goAutoContinue.message": {
          "type": "string",
          "default": "continue",
          "description": "%config.message.description%"
        },
        "goAutoContinue.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "Включить детальное логирование"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "goAutoContinue.toggle",
          "when": "view == goAutoContinueView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "goAutoContinue.start",
          "when": "view == goAutoContinueView && viewItem == stopped",
          "group": "control"
        },
        {
          "command": "goAutoContinue.stop",
          "when": "view == goAutoContinueView && viewItem == running",
          "group": "control"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish",
    "prepackage": "npm run compile",
    "prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^4.9.4"
  }
}
